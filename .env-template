# ──────────────────────────────────────────────
# LLM Guardrails -- Environment Configuration
# ──────────────────────────────────────────────
# Copy this file to .env and fill in the values.

# Guardrails behaviour --------------------------------------------------------
# Injection-detection threshold (0.0 = permissive, 1.0 = strict)
GUARDRAILS_INJECTION_THRESHOLD=0.5

# Enable / disable individual guards (true | false)
GUARDRAILS_PII_ENABLED=true
GUARDRAILS_INJECTION_ENABLED=true
GUARDRAILS_BIAS_ENABLED=true
GUARDRAILS_OUTPUT_VALIDATION_ENABLED=true

# Maximum allowed output length (characters)
GUARDRAILS_MAX_OUTPUT_LENGTH=4096

# API server -------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info
